extends layout

block body
  h1#page-title #{title}
  div.pure-g
    div.u-1.u-med-1-1.u-lrg-1-1
      h4.category #{title}
      each feature in features
        if feature.category == title
          div.item.item-full
            a.vote-link(href="/upvote/#{feature._id}" title="Vote for this feature") #{feature.votes}
            a.update-link.update-link-full(href="/edit/#{feature._id}" title="Update this feature") #{feature.content}
            a.vote-btn(href="/upvote/#{feature._id}" title="Vote for this feature")
