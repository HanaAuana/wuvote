<% layout( 'layout' ) -%>

<h1 id="page-title"><%= title %></h1>

<div id="list">
  <form action="/create" method="post" accept-charset="utf-8">
    <div class="item-new">
      <input class="input" type="text" name="content" />
    </div>
  </form>

<% features.forEach( function ( feature ){ %>
  <div class="item">
    <a class="vote-btn" href="/upvote/<%= feature._id %>" title="Vote for this feature"><%= feature.votes %></a>
    <a class="update-link" href="/edit/<%= feature._id %>" title="Update this feature"><%= feature.content %></a>
    <a class="del-btn" href="/destroy/<%= feature._id %>" title="Delete this feature">Delete</a>
  </div>
<% }); %>
</div>
