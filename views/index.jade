extends layout

block body
  h1#page-title #{title}
  div.pure-g
    div.u-1.u-med-1-3.u-lrg-1-4
      h4.category General
      each feature in features
        if feature.category == "General"
          div.item
            a.vote-link(href="/upvote/#{feature._id}" title="Vote for this feature") #{feature.votes}
            a.update-link(href="/edit/#{feature._id}" title="Update this feature") #{feature.content}
            a.vote-btn(href="/upvote/#{feature._id}" title="Vote for this feature")
    div.u-1.u-med-1-3.u-lrg-1-4
      h4.category Forms
      each feature in features
        if feature.category == "Forms"
          div.item
            a.vote-link(href="/upvote/#{feature._id}" title="Vote for this feature") #{feature.votes}
            a.update-link(href="/edit/#{feature._id}" title="Update this feature") #{feature.content}
            a.vote-btn(href="/upvote/#{feature._id}" title="Vote for this feature") 
    div.u-1.u-med-1-3.u-lrg-1-4  
      h4.category Reports
      each feature in features
        if feature.category == "Reports"
          div.item
            a.vote-link(href="/upvote/#{feature._id}" title="Vote for this feature") #{feature.votes}
            a.update-link(href="/edit/#{feature._id}" title="Update this feature") #{feature.content}
            a.vote-btn(href="/upvote/#{feature._id}" title="Vote for this feature")
    div.u-1.form-box
      div.l-box
        h2 Add a feature
        form.pure-form(action="/create" method="post" accept-charset="utf-8")
          fieldset
            input(type="text" name="content" placeholder="Description")
            select(name="category")
              option(value="") Pick a Category
              option(value="General") General
              option(value="Forms") Forms
              option(value="Reports") Reports
            button.pure-button.pure-button-primary(type='submit') Add
        
